#include <iostream>
#include <algorithm>
#include <cmath>

using namespace std;

void Rearr(int arr[], int n){
    sort(arr, arr+n);
    
    int temp[n] = {};
    
    //for(int i=0;i<n;i++) cout << arr[i] << endl;
    int a = -1;
    int base;
    if( n%2 != 0) base = n/2;
    else base = n/2-1;
    for(int i=0;i<n;i++){
        //cout << "base:" << base << endl;
        //cout << "arr point " << base<< endl;
        base-=i*(int)pow(a,i);
        temp[i] = arr[base];
        //cout << "new base " << base << endl;
        //cout << endl;
    }
    //cout << endl;
    for(int i=0;i<n;i++) cout << temp[i];
}

int main(){

    int arr[] = {1, 2, 1, 4, 5, 6, 8, 8};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    Rearr(arr, n);

    
}
